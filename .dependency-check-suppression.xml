    <!-- Suppress test dependencies -->
    <suppress>
        <notes><![CDATA[
            Test dependencies are not deployed to production.
        ]]></notes>
        <filePath regex="true">.*[/\\]test[/\\].*</filePath>
        <cpe>cpe:/a:*:*</cpe>
    </suppress>

    <!-- Suppress development tool vulnerabilities -->
    <suppress>
        <notes><![CDATA[
            Development tools like Lombok are compile-time only and not included in runtime.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.projectlombok/lombok@.*$</packageUrl>
        <cpe>cpe:/a:*:*</cpe>
    </suppress>
</suppressions>
