# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Java files
[*.java]
indent_size = 4
max_line_length = 120

# Kotlin files
[*.kt]
indent_size = 4
max_line_length = 120

# XML files (Maven, Spring configs)
[*.xml]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Properties files
[*.properties]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2
